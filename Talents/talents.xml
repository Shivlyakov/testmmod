<Talents>
  <!-- 敌人在水中 -->
  <Talent identifier="deep_in_water">
    <Icon texture="Content/UI/TalentsIcons2.png" sheetindex="4,4" sheetelementsize="128,128" />
    <Description tag="talentdescription.deep_in_water"></Description>
    <!-- 防逃课机制：敌人在水中无伤害 -->
    <AbilityGroupInterval interval="0.1">
      <Conditions>
        <AbilityConditionInWater />
      </Conditions>
      <Abilities>
        <CharacterAbilityModifyStat stattype="AttackMultiplier" value="-10.0" />
        <CharacterAbilityModifyResistance resistanceid="stun" multiplier="0" />
        <CharacterAbilityModifyResistance resistanceid="alieninfection" multiplier="0" />
        <CharacterAbilityModifyResistance resistanceid="radiationsickness" multiplier="0" />
        <CharacterAbilityModifyResistance resistanceid="poison" multiplier="0" />
      </Abilities>
    </AbilityGroupInterval>
    <!-- 防逃课机制：敌人在水中时获得陶瓷插板效果 -->
    <AbilityGroupInterval interval="0.1">
      <Conditions>
        <AbilityConditionInWater />
      </Conditions>
      <Abilities>
        <CharacterAbilityApplyStatusEffects>
          <StatusEffects>
            <StatusEffect type="OnAbility" target="Character" multiplyafflictionsbymaxvitality="true" disabledeltatime="true">
              <Affliction identifier="armor_ceramics" amount="100.0" />
            </StatusEffect>
          </StatusEffects>
        </CharacterAbilityApplyStatusEffects>
      </Abilities>
    </AbilityGroupInterval>
    <!-- 抗性 -->
    <AbilityGroupInterval interval="0.1">
      <Abilities>
        <CharacterAbilityModifyResistance resistanceid="alieninfection" multiplier="0" />
        <CharacterAbilityModifyResistance resistanceid="poison" multiplier="0" />
      </Abilities>
    </AbilityGroupInterval>
    <!-- 敌人倒地后，受到5倍伤害，方便补刀 -->
    <AbilityGroupInterval interval="0.1">
      <Conditions>
        <AbilityConditionAboveVitality invert="true" vitalitypercentage="0" />
      </Conditions>
      <Abilities>
        <CharacterAbilityModifyResistance resistanceid="damage" multiplier="5" />
        <CharacterAbilityModifyResistance resistanceid="Shrapnel_residue" multiplier="5" />
      </Abilities>
    </AbilityGroupInterval>
    <!-- 敌人开枪无法压制玩家-->
    <AbilityGroupEffect abilityeffecttype="OnAddDamageAffliction">
      <Conditions>
        <AbilityConditionCharacter targettypes="Enemy" />
      </Conditions>
      <Abilities>
        <CharacterAbilityModifyAffliction afflictionidentifiers="stun,incrementalstun,progressivestun" addedmultiplier="-1" />
      </Abilities>
    </AbilityGroupEffect>
    <!-- 敌人扎堆时，伤害降低 -->
    <AbilityGroupEffect abilityeffecttype="OnAttack">
      <Conditions>
        <AbilityConditionNearbyCharacterCount distance="300" targettypes="Ally" count="1" />
      </Conditions>
      <Abilities>
        <CharacterAbilityModifyAttackData addeddamagemultiplier="-0.1" />
      </Abilities>
    </AbilityGroupEffect>
    <AbilityGroupEffect abilityeffecttype="OnAttack">
      <Conditions>
        <AbilityConditionNearbyCharacterCount distance="300" targettypes="Ally" count="2" />
      </Conditions>
      <Abilities>
        <CharacterAbilityModifyAttackData addeddamagemultiplier="-0.1" />
      </Abilities>
    </AbilityGroupEffect>
    <AbilityGroupEffect abilityeffecttype="OnAttack">
      <Conditions>
        <AbilityConditionNearbyCharacterCount distance="300" targettypes="Ally" count="3" />
      </Conditions>
      <Abilities>
        <CharacterAbilityModifyAttackData addeddamagemultiplier="-0.2" />
      </Abilities>
    </AbilityGroupEffect>
    <!-- 敌人攻击玩家双臂时，降低25%枪伤 -->
    <AbilityGroupEffect abilityeffecttype="OnAttack">
      <Abilities>
        <CharacterAbilityApplyStatusEffects>
          <StatusEffects>
            <StatusEffect type="OnAbility" target="Character" setvalue="true" multiplyafflictionsbymaxvitality="true" disabledeltatime="true">
              <Affliction identifier="deep_enemy_four_limbs_balance" strength="100.0" />
            </StatusEffect>
          </StatusEffects>
        </CharacterAbilityApplyStatusEffects>
      </Abilities>
    </AbilityGroupEffect>
  </Talent>
