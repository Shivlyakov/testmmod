<?xml version="1.0" encoding="utf-8"?>
<Talents>
  <Talent identifier="deep_pirate_talent_common">
    <Icon texture="%ModDir%/Talents/shotgun.png" sheetindex="0,3" sheetelementsize="128,128" />
    <Description tag="talentdescription.deep_pirate_talent_common"></Description>
    <!-- 海盗普通敌人天赋 -->
    <!-- 数值调整 -->
    <AbilityGroupEffect abilityeffecttype="None">
      <Abilities>
        <CharacterAbilityGiveStat stattype="MeleeAttackMultiplier" value="3" />
        <CharacterAbilityGiveStat stattype="MeleeAttackSpeed" value="1" />
        <CharacterAbilityModifyStat stattype="TeamAttackMultiplier" value="-1" />
      </Abilities>
    </AbilityGroupEffect>
    <!-- 抗性 -->
    <AbilityGroupInterval interval="5">
      <Abilities>
        <CharacterAbilityModifyResistance resistanceid="stun" multiplier="0.5" />
      </Abilities>
    </AbilityGroupInterval>
  </Talent>
  <Talent identifier="deep_pirate_talent_leader">
    <Icon texture="%ModDir%/Talents/shotgun.png" sheetindex="0,3" sheetelementsize="128,128" />
    <Description tag="talentdescription.deep_pirate_talent_leader"></Description>
    <!-- 海盗普首领天赋 -->
    <!-- 数值调整 -->
    <AbilityGroupEffect abilityeffecttype="None">
      <Abilities>
        <CharacterAbilityGiveStat stattype="MeleeAttackMultiplier" value="3" />
        <CharacterAbilityGiveStat stattype="MeleeAttackSpeed" value="1" />
        <CharacterAbilityModifyStat stattype="TeamAttackMultiplier" value="-1" />
      </Abilities>
    </AbilityGroupEffect>
    <!-- 抗性 -->
    <AbilityGroupInterval interval="5">
      <Abilities>
        <CharacterAbilityModifyResistance resistanceid="stun" multiplier="0.7" />
      </Abilities>
    </AbilityGroupInterval>
    <!-- 四肢获得33%枪伤抗性 -->
    <AbilityGroupEffect abilityeffecttype="None">
      <Abilities>
        <CharacterAbilityApplyStatusEffects>
          <StatusEffects>
            <StatusEffect type="OnAbility" target="This" multiplyafflictionsbymaxvitality="true">
              <Affliction identifier="deep_enemy_four_limbs_balance_33" amount="1.0" />
            </StatusEffect>
          </StatusEffects>
        </CharacterAbilityApplyStatusEffects>
      </Abilities>
    </AbilityGroupEffect>
  </Talent>
</Talents>