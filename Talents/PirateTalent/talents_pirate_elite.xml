<Talents>
  <Talent identifier="deep_elite_talent_pirate_soidier">
    <Icon texture="%ModDir%/Talents/shotgun.png" sheetindex="0,3" sheetelementsize="128,128" />
    <Description tag="talentdescription.deep_elite_talent_pirate_soidier"></Description>
    <!-- 海盗精英士兵天赋 -->
    <!-- 多人游戏数值调整 -->
    <AbilityGroupEffect abilityeffecttype="None">
      <Abilities>
        <CharacterAbilityGiveStat stattype="MaximumHealthMultiplier" value="1" />
        <CharacterAbilityGiveStat stattype="MeleeAttackMultiplier" value="10" />
        <CharacterAbilityGiveStat stattype="MeleeAttackSpeed" value="1" />
        <CharacterAbilityGiveStat stattype="MovementSpeed" value="0.2" />
        <CharacterAbilityModifyStat stattype="TeamAttackMultiplier" value="-1" />
      </Abilities>
    </AbilityGroupEffect>
    <!-- 抗性 -->
    <AbilityGroupInterval interval="5">
      <Abilities>
        <CharacterAbilityModifyResistance resistanceid="stun" multiplier="0.2" />
      </Abilities>
    </AbilityGroupInterval>
    <!-- 突击手 -->
    <AbilityGroupInterval interval="0.9">
      <Conditions>
        <AbilityConditionNearbyCharacterCount distance="800" targettypes="Enemy" count="1" />
      </Conditions>
      <Abilities>
        <CharacterAbilityModifyStat stattype="RangedAttackSpeed" value="0.1" />
        <CharacterAbilityModifyStat stattype="RangedAttackMultiplier" value="0.2" />
      </Abilities>
    </AbilityGroupInterval>
  </Talent>
