<?xml version="1.0" encoding="utf-8"?>
<Talents>
  <Talent identifier="deep_talent_elite_enemy">
    <Icon texture="Content/UI/TalentsIcons2.png" sheetindex="4,4" sheetelementsize="128,128" />
    <Description tag="talentdescription.deep_talent_elite_enemy"></Description>
    <!-- 敌人基础调整 -->
    <!-- 小惩罚机制：敌人在水中5s后，+50%伤害 -->
    <AbilityGroupInterval interval="5">
      <Conditions>
        <AbilityConditionInWater />
      </Conditions>
      <Abilities>
        <CharacterAbilityModifyStat stattype="AttackMultiplier" value="0.5" />
        <CharacterAbilityModifyResistance resistanceid="stun" multiplier="0" />
        <CharacterAbilityModifyResistance resistanceid="radiationsickness" multiplier="0" />
      </Abilities>
    </AbilityGroupInterval>
    <!-- 抗性 -->
    <AbilityGroupInterval interval="1">
      <Abilities>
        <CharacterAbilityModifyResistance resistanceid="alieninfection" multiplier="0" />
        <CharacterAbilityModifyResistance resistanceid="poison" multiplier="0" />
        <CharacterAbilityModifyResistance resistanceid="blunttrauma" multiplier="0" />
        <CharacterAbilityModifyResistance resistanceid="fractures" multiplier="0" />
        <CharacterAbilityModifyResistance resistanceid="t_amputation" multiplier="0" />
        <CharacterAbilityModifyResistance resistanceid="arterialcut" multiplier="0" />
      </Abilities>
    </AbilityGroupInterval>
    <!-- 敌人倒地后，受到6倍伤害，方便补刀 -->
    <AbilityGroupInterval interval="0.5">
      <Conditions>
        <AbilityConditionAboveVitality invert="true" vitalitypercentage="0" />
      </Conditions>
      <Abilities>
        <CharacterAbilityModifyResistance resistanceid="damage" multiplier="6" />
        <CharacterAbilityModifyResistance resistanceid="deep_bullet_injury" multiplier="6" />
        <CharacterAbilityModifyResistance resistanceid="deep_headshot_deadly" multiplier="6" />
        <CharacterAbilityModifyResistance resistanceid="deep_headshot_deadly_irresistible" multiplier="6" />
        <CharacterAbilityModifyResistance resistanceid="Shrapnel_residue" multiplier="6" />
      </Abilities>
    </AbilityGroupInterval>
    <!-- 敌人倒地后，抗性-100，方便补刀 -->
    <AbilityGroupInterval interval="0.5">
      <Conditions>
        <AbilityConditionAboveVitality invert="true" vitalitypercentage="0" />
      </Conditions>
      <Abilities>
        <CharacterAbilityApplyStatusEffects>
          <StatusEffects>
            <StatusEffect type="OnAbility" target="This" setvalue="true" multiplyafflictionsbymaxvitality="true" disabledeltatime="true">
              <Affliction identifier="deep_elite_resistance_health_0" strength="1.0" />
            </StatusEffect>
          </StatusEffects>
        </CharacterAbilityApplyStatusEffects>
      </Abilities>
    </AbilityGroupInterval>
    <!-- 敌人开枪无法压制玩家-->
    <AbilityGroupEffect abilityeffecttype="OnAddDamageAffliction">
      <Conditions>
        <AbilityConditionCharacter targettypes="Enemy" />
      </Conditions>
      <Abilities>
        <CharacterAbilityModifyAffliction afflictionidentifiers="stun,incrementalstun,progressivestun" addedmultiplier="-1" />
      </Abilities>
    </AbilityGroupEffect>
    <!-- 敌人攻击玩家四肢时，降低枪伤 -->
    <AbilityGroupEffect abilityeffecttype="OnAttack">
      <Abilities>
        <CharacterAbilityApplyStatusEffects>
          <StatusEffects>
            <StatusEffect type="OnAbility" target="Character" setvalue="true" multiplyafflictionsbymaxvitality="true" disabledeltatime="true">
              <Affliction identifier="deep_enemy_up_limbs_balance" strength="100.0" />
              <Affliction identifier="deep_enemy_down_limbs_balance" strength="100.0" />
            </StatusEffect>
          </StatusEffects>
        </CharacterAbilityApplyStatusEffects>
      </Abilities>
    </AbilityGroupEffect>
    <!-- 敌人攻击非人类敌人时，可以造成伤害 -->
    <AbilityGroupEffect abilityeffecttype="OnAttack">
      <Conditions>
        <AbilityConditionCharacter targettypes="Monster" />
      </Conditions>
      <Abilities>
        <CharacterAbilityApplyStatusEffects>
          <StatusEffects>
            <StatusEffect type="OnAbility" target="This" setvalue="true" multiplyafflictionsbymaxvitality="true" disabledeltatime="true">
              <Affliction identifier="deep_enemy_no_friendlyfire" strength="5.0" />
            </StatusEffect>
          </StatusEffects>
        </CharacterAbilityApplyStatusEffects>
      </Abilities>
    </AbilityGroupEffect>
    <!-- 多人游戏动态抗性调整，20米范围内有敌人时，增加战斗能力，附近5人时达到最大 -->
    <AbilityGroupInterval interval="0.9">
      <Conditions>
        <AbilityConditionNearbyCharacterCount distance="2000" targettypes="Enemy" count="1" />
      </Conditions>
      <Abilities>
        <CharacterAbilityApplyStatusEffects>
          <StatusEffects>
            <StatusEffect type="OnAbility" target="This" multiplyafflictionsbymaxvitality="true" disableDeltaTime="true">
              <Affliction identifier="deep_enemy_resistance_damage_balance_1" amount="10.0" />
              <Affliction identifier="deep_enemy_resistance_headshot_balance_1" amount="10.0" />
            </StatusEffect>
          </StatusEffects>
        </CharacterAbilityApplyStatusEffects>
      </Abilities>
    </AbilityGroupInterval>
    <AbilityGroupInterval interval="0.9">
      <Conditions>
        <AbilityConditionNearbyCharacterCount distance="2000" targettypes="Enemy" count="2" />
      </Conditions>
      <Abilities>
        <CharacterAbilityApplyStatusEffects>
          <StatusEffects>
            <StatusEffect type="OnAbility" target="This" multiplyafflictionsbymaxvitality="true" disableDeltaTime="true">
              <Affliction identifier="deep_enemy_resistance_damage_balance_2" amount="10.0" />
              <Affliction identifier="deep_enemy_resistance_headshot_balance_2" amount="10.0" />
            </StatusEffect>
          </StatusEffects>
        </CharacterAbilityApplyStatusEffects>
      </Abilities>
    </AbilityGroupInterval>
    <AbilityGroupInterval interval="0.9">
      <Conditions>
        <AbilityConditionNearbyCharacterCount distance="2000" targettypes="Enemy" count="3" />
      </Conditions>
      <Abilities>
        <CharacterAbilityApplyStatusEffects>
          <StatusEffects>
            <StatusEffect type="OnAbility" target="This" multiplyafflictionsbymaxvitality="true" disableDeltaTime="true">
              <Affliction identifier="deep_enemy_resistance_damage_balance_3" amount="10.0" />
              <Affliction identifier="deep_enemy_resistance_headshot_balance_3" amount="10.0" />
            </StatusEffect>
          </StatusEffects>
        </CharacterAbilityApplyStatusEffects>
      </Abilities>
    </AbilityGroupInterval>
    <AbilityGroupInterval interval="0.9">
      <Conditions>
        <AbilityConditionNearbyCharacterCount distance="2000" targettypes="Enemy" count="4" />
      </Conditions>
      <Abilities>
        <CharacterAbilityApplyStatusEffects>
          <StatusEffects>
            <StatusEffect type="OnAbility" target="This" multiplyafflictionsbymaxvitality="true" disableDeltaTime="true">
              <Affliction identifier="deep_enemy_resistance_damage_balance_4" amount="10.0" />
              <Affliction identifier="deep_enemy_resistance_headshot_balance_4" amount="10.0" />
            </StatusEffect>
          </StatusEffects>
        </CharacterAbilityApplyStatusEffects>
      </Abilities>
    </AbilityGroupInterval>
    <AbilityGroupInterval interval="0.9">
      <Conditions>
        <AbilityConditionNearbyCharacterCount distance="2000" targettypes="Enemy" count="5" />
      </Conditions>
      <Abilities>
        <CharacterAbilityApplyStatusEffects>
          <StatusEffects>
            <StatusEffect type="OnAbility" target="This" multiplyafflictionsbymaxvitality="true" disableDeltaTime="true">
              <Affliction identifier="deep_enemy_resistance_damage_balance_5" amount="10.0" />
              <Affliction identifier="deep_enemy_resistance_headshot_balance_5" amount="10.0" />
            </StatusEffect>
          </StatusEffects>
        </CharacterAbilityApplyStatusEffects>
      </Abilities>
    </AbilityGroupInterval>
    <!-- 霰弹枪伤害调整：造成1.5倍伤害 -->
    <AbilityGroupInterval interval="0.5">
      <Conditions>
        <AbilityConditionHasAffliction afflictionidentifier="deep_legshot_shotgun_100" />
      </Conditions>
      <Abilities>
        <CharacterAbilityModifyResistance resistanceid="damage" multiplier="1.5" />
      </Abilities>
    </AbilityGroupInterval>
    <!--敌人插板移速调整-->
    <AbilityGroupInterval interval="0.9">
      <Abilities>
        <CharacterAbilityApplyStatusEffects>
          <StatusEffects>
            <StatusEffect type="OnAbility" target="This" multiplyafflictionsbymaxvitality="true" setvalue="true" disabledeltatime="true">
              <Affliction identifier="deep_enemy_resistance_plate_speed" strength="5.0" />
            </StatusEffect>
          </StatusEffects>
        </CharacterAbilityApplyStatusEffects>
      </Abilities>
    </AbilityGroupInterval>
  </Talent>
</Talents>